{% extends "base.twig" %}

{% block title %}Show Note{% endblock %}

{% block content %}
    <h1>Edit Note</h1>
    <form action="/{{ note.id }}/" method="post">
        <p>
            <label>
                Title:
                <input type="text" name="title" value="{{ note.title }}">
            </label>
        </p>
        <p>
            <label>
                Body:
                <input type="text" name="body" value="{{ note.body }}">
            </label>
        </p>

        <input type="submit">
    </form>
{% endblock %}